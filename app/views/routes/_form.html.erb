<div class="routes_form">
  <%= form_for(@route) do |f| %>
  <div class="field">
    <span class="label">Name</span><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <span class="label">URL</span><br />
    <%= f.text_field :url %>
  </div>

   <div class="field">
   <span class="label">Description</span><br />
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :id => "submit_forms" %>
  </div>
<% end %>

</div> 
