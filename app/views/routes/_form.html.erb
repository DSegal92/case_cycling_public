<script type="text/javascript">
  $(document).ready(function(){
    $("#name").watermark("test")
  }))

</script>

<div class="routes_form">
  <%= form_for(@route) do |f| %>
  
  <div class="route_field">
    <span class="label">URL</span><br />
    <%= f.text_field :url, :placeholder => "http://www.strava.com/activities/#######" %>
  </div>

  <div class="route_field">
    <span class="label">Name</span><br />
    <%= f.text_field :name, :placeholder => "Leave Blank to Use Strava Activity Name" %>
  </div>
    <div class="route_field">
    <span class="label">Description</span><br />
    <%= f.text_area :description, :class => "textbox_large", :placeholder => "Have anything to say about this route?" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :id => "submit_forms" %>
  </div>
<% end %>

</div> 
