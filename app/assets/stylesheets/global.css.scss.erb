$case-blue: #428CE7;

@font-face {
    font-family: 'Helvetica Nueue';
    src: url('<%= asset_path '/assets/nueue.eot'%>'),
         url('<%= asset_path '/assets/nueue.woff'%>') format('woff'),
         url('<%= asset_path '/assets/nueue.ttf'%>') format('truetype'),
         url('<%= asset_path '/assets/nueue.svg#TradeGothicLTCondEighteenBold'%>') format('svg');
    font-weight: normal;
    font-style: normal;

}

a{text-decoration: none;}
a:link{color: #003755};
a:visited{color: #003755};
a:hover{color: #428CE7};

.navbar ul{
	display: table;
	margin: 0 auto;
	width: 55%;
	list-style: none;
}

.top_item{
	display: table-cell; 
	text-align: center;
	padding: 0 5px 5px 0;
}

.unbulleted{
	list-style: none;
	 padding: 0;
}

.navbar a{
	font-family: 'Helvetica Nueue', sans-serif;
	font-size: 16px;
	text-decoration: none;
	color: #fff;
}

.navbar a:link{
	color: #777;
}
.navbar a:hover{
	color: #fff !important; 
}
.navbar a:visited{
	color: #777;
}

.navbar{
	margin-top: -20px;
	margin-left: -20px;
	z-index: 1;
	background-color: black;
	padding: 10px 0 10px 0;
	border-bottom: 7px solid $case-blue;
}

#header_logo{
	display: block;
	margin: 30px auto;
}

.dropdown ul { 
	padding: 0;
	width: 100px;
	background-color: white;
	visibility: hidden; 
	position: absolute;
	box-shadow: 1px 1px 5px #888888;
}

.dropdown ul>li>a{
		padding: 0 25px 0 25px;
}

.dropdown ul>li:hover{
	background-color: #428CE7;
	
}

hr.soften {
  height: 1px;
  background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
  border: 0;
}

